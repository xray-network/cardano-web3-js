{
  "compilerOptions": {
    // "strict": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "test"]
}
